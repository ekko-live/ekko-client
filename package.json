{
  "name": "ekko-client",
  "version": "1.0.0",
  "description": "JavaScript client to interact with realtime ekko-server",
  "main": "./lib/ekko-client.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "build": "browserify ./dist/toDistribution.js | uglifyjs -o ./dist/ekko-client-v$npm_package_version.js",
    "watch": "watchify ./dist/toDistribution.js | uglifyjs -o ./dist/ekko-client-v$npm_package_version.js --debug --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ekko-live/ekko-client.git"
  },
  "keywords": [
    "ekko",
    "realtime",
    "websocket",
    "socketio"
  ],
  "author": "ekko",
  "contributors": [
    "Alex Strick van Linschoten",
    "Dorey Miller",
    "Drew Holbrook",
    "Will Lotherington <will.lotherington@hey.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ekko-live/ekko-client/issues"
  },
  "homepage": "https://github.com/ekko-live/ekko-client#readme",
  "dependencies": {
    "socket.io-client": "^4.0.1"
  },
  "devDependencies": {
    "browserify": "^17.0.0",
    "uglify-js": "^3.13.4",
    "watchify": "^4.0.0"
  }
}
